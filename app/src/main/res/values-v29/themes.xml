<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HarmonyHaven" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:forceDarkAllowed">false</item>


    </style>

    <style name="Theme.HarmonyHaven.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#92BABF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/harmonyhaven_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.HarmonyHaven</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:forceDarkAllowed">false</item>


    </style>
</resources>